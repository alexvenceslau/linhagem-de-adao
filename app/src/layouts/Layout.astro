      <div class="footer-container">
        <div class="biblical-quote">
          <blockquote>
            "Este é o livro da genealogia de Adão..."
            <cite>— Gênesis 5:1 (NVT)</cite>
          </blockquote>
        </div>
        
        <div class="footer-info">
          <p>&copy; 2025 Alex Venceslau • Projeto Devocional</p>
          <p class="version-info">Baseado na Nova Versão Transformadora (NVT)</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<script>
  // Sidebar Toggle Functionality
  document.addEventListener('DOMContentLoaded', function() {
    const sidebar = document.getElementById('sidebar');
    const mobileToggle = document.getElementById('mobileToggle');
    const desktopToggle = document.getElementById('desktopToggle');
    const mobileToggleIcon = document.getElementById('mobileToggleIcon');
    const desktopToggleIcon = document.getElementById('desktopToggleIcon');
    const sidebarContent = document.getElementById('sidebarContent');
    
    if (!sidebar) return;
    
    // Mobile Toggle
    if (mobileToggle && mobileToggleIcon) {
      mobileToggle.addEventListener('click', function() {
        const isExpanded = sidebar.classList.contains('expanded');
        
        if (isExpanded) {
          sidebar.classList.remove('expanded');
          mobileToggleIcon.textContent = '☰';
          mobileToggle.setAttribute('aria-label', 'Abrir menu lateral');
        } else {
          sidebar.classList.add('expanded');
          mobileToggleIcon.textContent = '✕';
          mobileToggle.setAttribute('aria-label', 'Fechar menu lateral');
        }
      });
    }

    // Desktop Toggle
    if (desktopToggle && desktopToggleIcon) {
      desktopToggle.addEventListener('click', function() {
        const isExpanded = sidebar.classList.contains('expanded');
        
        if (isExpanded) {
          sidebar.classList.remove('expanded');
          desktopToggleIcon.textContent = '☰';
          desktopToggle.setAttribute('aria-label', 'Expandir menu lateral');
        } else {
          sidebar.classList.add('expanded');
          desktopToggleIcon.textContent = '✕';
          desktopToggle.setAttribute('aria-label', 'Recolher menu lateral');
        }
      });
    }
    
    // Close sidebar when clicking outside (on mobile)
    document.addEventListener('click', function(event) {
      const target = event.target as Node;
      if (window.innerWidth <= 768 && 
          sidebar.classList.contains('expanded') && 
          target && !sidebar.contains(target) && 
          mobileToggle && !mobileToggle.contains(target as Node)) {
        sidebar.classList.remove('expanded');
        if (mobileToggleIcon) {
          mobileToggleIcon.textContent = '☰';
          mobileToggle.setAttribute('aria-label', 'Abrir menu lateral');
        }
      }
    });
    
    // Handle window resize
    window.addEventListener('resize', function() {
      if (window.innerWidth > 768) {
        // On desktop, keep sidebar visible but collapsed by default
        sidebar.classList.remove('expanded');
        if (mobileToggleIcon) {
          mobileToggleIcon.textContent = '☰';
        }
        if (desktopToggleIcon) {
          desktopToggleIcon.textContent = '☰';
        }
      }
    });
    
    // Filter functionality placeholders
    const periodFilter = document.getElementById('periodFilter') as HTMLSelectElement;
    const versionFilter = document.getElementById('versionFilter') as HTMLSelectElement;
    const searchFilter = document.getElementById('searchFilter') as HTMLInputElement;
    
    if (periodFilter) {
      periodFilter.addEventListener('change', function() {
        console.log('Period filter changed:', this.value);
        // TODO: Implement period filtering
      });
    }
    
    if (versionFilter) {
      versionFilter.addEventListener('change', function() {
        console.log('Version filter changed:', this.value);
        // TODO: Implement version filtering
      });
    }
    
    if (searchFilter) {
      searchFilter.addEventListener('input', function() {
        console.log('Search filter changed:', this.value);
        // TODO: Implement search functionality
      });
    }
  });
</script>

<style>
