  }

  /* Mobile Toggle Button (Always visible on mobile) */
  .mobile-toggle-btn {
    position: fixed;
    top: 20px;
    left: 20px;
    width: 50px;
    height: 50px;
    background: var(--color-earth);
    border: 2px solid var(--color-white);
    border-radius: 50%;
